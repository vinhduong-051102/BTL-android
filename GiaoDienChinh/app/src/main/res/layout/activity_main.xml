<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, Student"
            android:textSize="64px"
            android:layout_margin="40px"
            android:textStyle="bold">

        </TextView>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/boxtkb"
                android:layout_width="900px"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="130px"
                android:layout_marginTop="30px"
                android:layout_marginEnd="130px"
                android:layout_marginBottom="30px"
                android:background="#D6F3FF"
                android:clipToOutline="true"
                android:orientation="vertical"
                android:outlineProvider="background"

                android:padding="50px">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Thời khóa biểu"
                    android:textSize="48px"

                    >

                </TextView>

                <TextView
                    android:id="@+id/date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text=""
                    android:textSize="64px"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/xemtkb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Xem thời khóa biểu"
                    android:textColor="#005F92"
                    android:textSize="48px">

                </TextView>
            </LinearLayout>
            <ImageView
                android:layout_width="180px"
                android:layout_height="180px"
                android:src="@drawable/calendar_clock"
                android:layout_marginStart="140px"
                android:layout_marginTop="40px"
                android:layout_marginEnd="130px"
                android:layout_marginBottom="30px"
                >

            </ImageView>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiện ích"
            android:textSize="56px"
            android:layout_marginLeft="40px"
            android:layout_marginTop="60px"
            android:textStyle="bold">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="vertical"
            android:layout_marginLeft="150px"
            android:layout_marginRight="150px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginTop="50px">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/diemDanhbtn"
                        android:layout_weight="1"
                        android:padding="40px"
                        android:background="#D6F3FF"
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:layout_gravity="center"
                        >
                        <ImageView
                            android:id="@+id/myImageView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/list_check"
                            android:scaleType="centerCrop">
                        </ImageView>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10px"
                        android:text="Điểm danh"
                        android:layout_gravity="center"
                        >

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_gravity="center">
                    <LinearLayout
                        android:id="@+id/ketQuabtn"

                        android:padding="40px"
                        android:textSize="40px"
                        android:background="#D6F3FF"
                        android:layout_width="200px"
                        android:layout_height="200px"
                        android:layout_gravity="center"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/chat_arrow_grow"
                            android:scaleType="centerCrop">
                        </ImageView>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kết quả HT"
                        android:layout_marginTop="10px"
                        android:layout_gravity="center"
                        >

                    </TextView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="50px"
            android:layout_marginLeft="150px"
            android:layout_marginRight="150px">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_weight="1">
                <LinearLayout
                    android:id="@+id/xemHPbtn"
                    android:layout_weight="1"
                    android:padding="40px"
                    android:textSize="40px"
                    android:background="#D6F3FF"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/assept_document"
                        android:scaleType="centerCrop">
                    </ImageView>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Xem học phần"
                    android:layout_marginTop="10px"
                    android:layout_gravity="center"
                    >

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center">
                <LinearLayout
                    android:id="@+id/DKnghibtn"

                    android:padding="40px"
                    android:textSize="40px"
                    android:background="#D6F3FF"
                    android:layout_width="200px"
                    android:layout_height="200px"
                    android:layout_gravity="center"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/edit"
                        android:scaleType="centerCrop">
                    </ImageView>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Đăng ký nghỉ"
                    android:layout_marginTop="10px"
                    android:layout_gravity="center"
                    >

                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>